{
    "functions": {
        "source": "backend",
        "runtime": "nodejs18"
    },
    "hosting": {
        "public": "frontend/build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}